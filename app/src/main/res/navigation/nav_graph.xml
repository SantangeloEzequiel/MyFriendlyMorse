<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.santangeloezequiel.myfriendlymorse.ui.Menu"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_menu">

        <action
            android:id="@+id/action_FirstFragment_to_Morsedetector"
            app:destination="@id/Morsedetector" />
        <action
            android:id="@+id/action_FirstFragment_to_manualTranslator"
            app:destination="@id/manualTranslator" />
        <action
            android:id="@+id/action_FirstFragment_to_help"
            app:destination="@id/help" />
    </fragment>
    <fragment
        android:id="@+id/Morsedetector"
        android:name="com.santangeloezequiel.myfriendlymorse.ui.Morsedetector"
        android:label="MorseDetector"
        tools:layout="@layout/fragment_morsedetector">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/manualTranslator"
        android:name="com.santangeloezequiel.myfriendlymorse.ui.ManualTranslator"
        android:label="ManualTranslator" >
        <action
            android:id="@+id/action_manualTranslator_to_FirstFragment2"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/help"
        android:name="com.santangeloezequiel.myfriendlymorse.ui.Help"
        android:label="help" >
        <action
            android:id="@+id/action_manualTranslator_to_help"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>